generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model IdentityUser {
  id           String         @id @db.Uuid // This is a UUID
  firstName    String
  lastName     String
  email        String         @unique
  passwordHash String
  status       IdentityStatus
  createdAt    DateTime
  updatedAt    DateTime

  refreshTokens RefreshToken[]
  resetTokens   ResetToken[]
}

model RefreshToken {
  id             String   @id @db.Uuid
  
  identityUserId String   @db.Uuid
  value          String   @unique
  expiresAt      DateTime
  isRevoked      Boolean  @default(false)
  createdAt      DateTime
  updatedAt      DateTime

  user IdentityUser @relation(fields: [identityUserId], references: [id])
}

model ResetToken {
  id             String   @id @db.Uuid
  identityUserId String   @db.Uuid
  value          String  @unique
  expiresAt      DateTime
  isExpired      Boolean
  isValid        Boolean
  createdAt      DateTime
  updatedAt      DateTime

  user IdentityUser @relation(fields: [identityUserId], references: [id])
}

enum IdentityStatus {
  ACTIVE
  SUSPENDED
}

model JobSource {
  id              String    @id @db.Uuid
  name            String    // e.g., "LinkedIn Engineering"
  type            FeedType // RSS, API, SCRAPER
  baseUrl         String    // The endpoint or site root
  isEnabled       Boolean   @default(true)
  lastIngestedAt  DateTime?
  
  // JobSources own their listings
  listings        JobListing[] 
}

enum FeedType {
  RSS
  ATOM
  CUSTOM_XML
}

model JobListing {
  id             String   @id @db.Uuid
  jobSourceId    String   @db.Uuid
  externalJobId  String   // The ID from LinkedIn/Indeed
  title          String
  type          Job_Listing_Type
  company        String
  location       String
  jobUrl         String
  postedAt       DateTime
  ingestedAt     DateTime @default(now())

  jobSource  JobSource @relation(fields: [jobSourceId] , references: [id])

  @@unique([jobSourceId, externalJobId]) // Prevents duplicates

}

enum Job_Listing_Type {
  REMOTE
  ONSITE
  HYBRID
}


model AlertUser {
  id             String   @id @db.Uuid
  identityUserId String   @db.Uuid
  email          String
  isPaused       Boolean  @default(false)
  createdAt      DateTime
}

model AlertRule {
  id          String      @id @db.Uuid
  alertUserId String
  keyword     String?
  createdAt   DateTime
}
